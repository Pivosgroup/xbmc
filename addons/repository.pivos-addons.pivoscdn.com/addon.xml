<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.pivos-addons.pivoscdn.com"
		name="Pivos Custom Add-ons"
		version="1.0.0"
		provider-name="Pivos">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
	<extension point="xbmc.addon.repository"
		name="Pivos Custom Addons">
		<info compressed="true">http://pivos-addons.pivoscdn.com/frodo/addons.xml</info>
		<checksum>http://pivos-addons.pivoscdn.com/frodo/addons.xml.md5</checksum>
		<datadir zip="true">http://pivos-addons.pivoscdn.com/frodo</datadir>
		<hashes>false</hashes>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons from Pivos</summary>
		<description lang="en">Download and install custom Pivos addons.</description>
		<disclaimer lang="en"></disclaimer>
		<platform>linux android</platform>
	</extension>
